/* pages/addclassroom/addclassroom.wxss */
page{
  background-color: #ebebeb;
}
.addclassroom_head{
  width: 100%;
  height: 70px;
  background-color: #ffffff;
  /* 居中方式 */
  /* display: flex;
  justify-content: center;
  align-items: center; */
}
.addclassroom_head .addclassroom_icon{
  position: absolute;
  left: 10px;
  top: 30px;
}
.addclassroom_title{
  position: absolute;
  top: 30px;
  left: 170px;
  font-size: 18px;
}
.addclassroom_content{
  width: 95%;
  height: 80px;
  background-color: #ffffff;
  margin: 10px auto;
  border-radius: 8px;
}
.addclassroom_content view{
  height: 60%;
  margin-left: 10px;
  font-size: 20px;
  color: #5b6972;
  font-weight: 600;
}
.addclassroom_content input{
  font-size: 18px;
  margin-left: 10px;
}
.addclassroom_class{
  width: 95%;
  height: 50px;
  background-color: #ffffff;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  border-radius: 8px;
}
.addclassroom_class view{
  margin: auto 10px;
  font-size: 17px;
  font-weight: 600;
  width: 330px;
}
.addclassroom_class image{
  width: 20px;
  height: 20px;
  margin: auto 20px;
}
.addclassroom_class text{
  color: #6668db;
  font-size: 13px;
}
/* 超出一行就显示省略号 */
.addclassroom_class view{
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.addclassroom_btn .weui-btn{
  margin-top: 50px;
  border-radius: 30px;
  background-image: linear-gradient(273deg, #8945d5, #7b6edd, #6290e5, #29b0ec)
}
.addclassroom_checkall{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  margin-bottom: 10px;
}
.addclassroom_checkall .weui-btn{
  background-color: #2d8cf0;
  border-radius: 10px;
}
.register_select{
  color: #80a0cc;
  text-align: center;
}
.register_select .weui-select{
  padding-right: 0px;
}
#register_select_image{
  width: 12px;
  height: 12px;
  margin-bottom: 15px;
  margin-left: 0px;
}
.weui-btn{
  width: 100%;
  border-radius: 30px;
  background-color: #ff65a3;
  margin-top: 10px;
}
.login_footer{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  color: #a7b6d9;
  margin-top: 60vh;
}
.login_footer text{
  margin-left: 10px;
}
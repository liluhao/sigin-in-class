.register_head{
  width: 80%;
  height: 300px;
  position: relative;
  /* 居中 */
  margin: 0 auto;
  top: 10px;
}
.register_head image{
  width: 100%;
  height: 350rpx;
}
.register_headTip{
  font-size: 38px;
  color: white;
  position: absolute;
  top: 90px;
  left: 94px;
}
.register_inputs{
  margin-top: 20vh;
}
.register_inputs .register_input{
  background-color: #e2f5fc;
  height: 15px;
  border-radius: 30px;
  margin-bottom: 20px;
  padding: 15px;
}
/* .register_select{
